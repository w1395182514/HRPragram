@model IEnumerable<Model.public_charModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/table.css" rel="stylesheet" />
</head>
<body>
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--公共属性设置
                </font>
            </td>
        </tr>
        <tr>
            <td align="right">
                @Html.ActionLink("添加", "Create", new { }, new { @class = "BUTTON_STYLE1" })
            </td>
        </tr>
    </table>
    <table width="100%" border="1" cellpadding=0 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        <tr>
            <td width="49%" class="TD_STYLE1">
                属性种类
            </td>
            <td width="44%" class="TD_STYLE1">
                属性名称
            </td>
            <td width="7%" class="TD_STYLE1" align="center">
                删除
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE2">
                薪酬发放方式
            </td>
            <td class="TD_STYLE2"></td>
            <td class="TD_STYLE2" align="center">
                <a href="#">删除</a>
            </td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="TD_STYLE2">
                    @Html.DisplayFor(modelItem => item.attribute_kind)
                </td>
                <td class="TD_STYLE2">
                    @Html.DisplayFor(modelItem => item.attribute_name)
                </td>
                <td class="TD_STYLE2" align="center">
                    @Html.ActionLink("删除", "Delete", new { id = item.pbc_id }, new { onclick = "return confirm('确认删除?')" })
                </td>
            </tr>
        }
        

    </table>
</body>
</html>
