@model Model.config_file_third_kindModel

@{
    ViewBag.Title = "Create";
}
<link href="~/css/table.css" rel="stylesheet" />
@using (Ajax.BeginForm("Create", "file_third_kind", new AjaxOptions() { HttpMethod = "post" }))
{
<table width="100%">
    <tr>
        <td>
            <font color="black">
                您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--III级机构设置--III级机构添加
            </font>
        </td>
    </tr>
    <tr>
        <td align="right">
            <input type="submit" value="提交" class="BUTTON_STYLE1">
            <input type="button" value="返回" class="BUTTON_STYLE1"
                   onclick="history.back();">
        </td>
    </tr>
</table>

<table width="100%" border="1" cellpadding=0 cellspacing=1
       bordercolorlight=#848284 bordercolordark=#eeeeee
       class="TABLE_STYLE1">
    <tr>
        <td width="19%" class="TD_STYLE1">
            I级机构名称
        </td>
        <td width="81%" class="TD_STYLE2">
               @Html.DropDownList("ffk_id", @ViewBag.dt as IEnumerable<SelectListItem>,"请选择I级机构名称")
                @Html.ValidationMessageFor(e => e.ftk_id)
            @*<select name="cftk.firstKindId" onchange="change1()" id="firstKindId" class="INPUT_STYLE1">
                <option value="0">请选择I机构名称</option>
            </select>*@
        </td>
    </tr>
    <tr>
        <td width="19%" class="TD_STYLE1">
            II级机构名称
        </td>
        <td width="81%" class="TD_STYLE2">
            @Html.DropDownList("fsk_id", @ViewBag.dt as IEnumerable<SelectListItem>, "请选择II级机构名称".ToString())
            @Html.ValidationMessageFor(e => e.ftk_id)
                   
            @*<select name="cftk.secondKindId" onchange="change2()" id="secondKindId" class="INPUT_STYLE1">
                <option value="0">
                    请选择II机构名称
                </option>

            </select>*@
        </td>
    </tr>
    <tr>
        <td width="19%" class="TD_STYLE1">
            III级机构编号
        </td>
        <td width="81%" class="TD_STYLE2">
                    @Html.EditorFor(model => model.third_kind_id, new { htmlAttributes = new { @class = "INPUT_STYLE1" } })
                    @Html.ValidationMessageFor(model => model.third_kind_id, "", new { @class = "text-danger" })
        </td>
    </tr>
    <tr>
        <td class="TD_STYLE1">
            III级机构名称
        </td>
        <td class="TD_STYLE2">
                    @Html.EditorFor(model => model.third_kind_name, new { htmlAttributes = new { @class = "INPUT_STYLE1" } })
                    @Html.ValidationMessageFor(model => model.third_kind_name, "", new { @class = "text-danger" })
        </td>
    </tr>
    <tr>
        <td class="TD_STYLE1">
            销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
        </td>
        <td class="TD_STYLE2">
                    @Html.TextAreaFor(model => model.third_kind_sale_id, new { htmlAttributes = new { @class = "TEXTAREA_STYLE1"} , @rows = "4", @cols = "120" })
                    @Html.ValidationMessageFor(model => model.third_kind_sale_id, "", new { @class = "text-danger" })
        </td>
    </tr>
    <tr>
        <td class="TD_STYLE1">
            是否为零售店（是/否）
        </td>
        <td class="TD_STYLE2">
            <select name="cftk.thirdKindIsRetail">
                <option selected="selected">是</option>
                <option>否</option>
            </select>

        </td>
    </tr>
</table>
}
