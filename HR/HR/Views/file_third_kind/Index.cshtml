@model IEnumerable<Model.config_file_third_kindModel>

@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<link href="~/css/table.css" rel="stylesheet" />
<script src="~/Scripts/vue.js"></script>



<table width="100%">
    <tr>
        <td>
            <font color="black">
                您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--III级机构设置
            </font>
        </td>
    </tr>
    <tr>
        <td align="right">
            @Html.ActionLink("添加", "Create", new { },new { @class= "BUTTON_STYLE1" })
        </td>
    </tr>
</table>
<div id="div1">
    <table width="100%" border="1" cellpadding=0 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        <tr>
            <td width="14%" class="TD_STYLE1">I级机构名称</td>
            <td width="14%" class="TD_STYLE1">II级机构名称 </td>
            <td width="14%" class="TD_STYLE1">II级机构编号 </td>
            <td width="14%" class="TD_STYLE1">III级机构名称</td>
            <td width="17%" class="TD_STYLE1">销售责任人编号 </td>
            <td width="17%" class="TD_STYLE1"> 是否为零售店 </td>
            <td width="5%" class="TD_STYLE1">变更</td>
            <td width="5%" class="TD_STYLE1">删除</td>
        </tr>
        <tr v-for="(item,index) in dt">
            <td>{{item.first_kind_name }}</td>
            <td>{{item.second_kind_name }}</td>
            <td>{{item.third_kind_id }}</td>
            <td>{{item.third_kind_name  }}</td>
            <td>{{item.third_kind_sale_id  }}</td>
            <td>{{item.third_kind_is_retail  }}</td>
            <td><a v-on:click="cz(item.ftk_id )" v-bind:href="['/file_third_kind/Update/'+item.Pid]">变更</a></td>
            <td><a v-on:click="cz(item.ftk_id )" v-bind:href="['/file_third_kind/Delete/'+item.Pid]">删除</a></td>
        </tr>
    </table>
</div>
<script type="text/javascript">
    var vm = new Vue({
        el: "#div1",
        data: {
            dt:null
        },
        methods: {
            load: function () {
                var t = this;
                $.ajax({
                    url: "/file_third_kind/RenStr",
                    type: "post",
                    data: "",
                    success: function (msg) {
                        var dd = eval("(" + msg + ")");
                        t.dt = dd;
                    }
                });
            }
        },
        created: function () {
            this.load();
        }
    });
</script>
