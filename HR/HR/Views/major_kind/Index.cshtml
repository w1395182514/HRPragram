@model IEnumerable<Model.config_major_kindModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/javascript/comm/comm.js"></script>
</head>
<body>
    <div id="Div1">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位分类设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    @Html.ActionLink("添 加", "Add", new { }, new { @class = "BUTTON_STYLE1",
                   style = "background-color:gainsboro;border-color:lightslategrey;" })
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="46%" class="TD_STYLE1">
                    职位分类编号
                </td>
                <td width="47%" class="TD_STYLE1">
                    职位分类名称
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>
            @*<tr>
                <td class="TD_STYLE2">
                    01
                </td>
                <td class="TD_STYLE2">
                    销售
                </td>
                <td class="TD_STYLE2">
                    <a href="#">删除</a>
                </td>
            </tr>*@
            <tr v-for="(item,i) in dt">
                <td class="TD_STYLE2">{{item.major_kind_id}}</td>
                <td class="TD_STYLE2">{{item.major_kind_name}}</td>
                <td class="TD_STYLE2"><a href="#" v-on:click="Del(item.mfk_id)">删除</a></td>
            </tr>
        </table>
        <p>
</div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#Div1",
            data: {
                dt:null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/major_kind/Sel",
                        type: "post",
                        data: "",
                        success: function (msg) {
                            var dd = eval("(" + msg + ")");
                            t.dt = dd;
                        }
                    });
                },
                Del(obj) {
                    if (confirm('确定要删除吗')) {
                        var v = this;
                        var id = obj;
                        $.ajax({
                            url: "/major_kind/Delete",
                            type: "get",
                            data: "id="+id,
                            success: function (msg) {
                                if (msg=="ok") {
                                    alert("删除成功!!!")
                                    location.reload();
                                } else {
                                    alert("删除失败!!!")
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            },
            created:function() {
                this.load();
            }
        });
    </script>
</body>
</html>
